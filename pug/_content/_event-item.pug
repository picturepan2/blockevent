- var events = require("./data/blockevent.json");

each event in events
  if event.highlight == true
    .blockevent-item.highlight(data-date=event.date.start)
      .event-date
        | #{event.date.human}
      .event-name
        a(href=event.url+'?utm_source=blockevent.co' target='_blank')
          | #{event.name}
      .event-location
        | #{event.location}
      .event-action
        a.btn.btn-sm.btn-primary(href=event.url+'?utm_source=blockevent.co' target='_blank')
          | Register
  else
    .blockevent-item(data-date=event.date.start)
      .event-date
        | #{event.date.human}
      .event-name
        a(href=event.url+'?utm_source=blockevent.co' target='_blank')
          | #{event.name}
      .event-location
        | #{event.location}
      .event-action